{
  "compilerOptions": {
    /* Target modern Node.js runtime */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Project structure */
    "rootDir": "../../",
    "outDir": "dist",

    /* Type generation */
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Extras */
    "resolveJsonModule": true,
    "types": ["node"],

    /* Path aliases */
    "baseUrl": "./",
    "paths": {
      "@odavl/codemods/*": ["../../packages/codemods/dist/*"],
      "@odavl/codemods": ["../../packages/codemods/dist/index.js"],
      "@odavl/policy": ["../../packages/policy/dist/index.d.ts"],
      "@odavl/policy/*": ["../../packages/policy/dist/index.d.ts"]
    },

    /* Emit settings */
    "noEmit": false
  },

  "include": [
    "src",
    "commands",
    "lib",
    "policy-bridge"
  ],

  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
