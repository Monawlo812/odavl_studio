{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
  "rootDir": "../../",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@odavl/codemods/*": ["../../packages/codemods/dist/*"],
      "@odavl/codemods": ["../../packages/codemods/dist/index.js"],
      "@odavl/policy": ["../../packages/policy/dist/index.d.ts"],
      "@odavl/policy/*": ["../../packages/policy/dist/index.d.ts"]
    },
  
  "noEmit": false
  },
  "include": ["src", "commands", "lib", "policy-bridge"]
}
