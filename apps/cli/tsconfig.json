{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
  "rootDir": "../../",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@odavl/codemods/*": ["../../packages/codemods/src/*"],
      "@odavl/policy": ["../../packages/policy/dist/index.d.ts"],
      "@odavl/policy/*": ["../../packages/policy/dist/index.d.ts"]
    },
  "allowImportingTsExtensions": true,
  "noEmit": true
  },
  "include": ["src", "commands", "lib", "policy-bridge"]
}
