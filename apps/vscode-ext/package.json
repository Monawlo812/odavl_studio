{
  "name": "odavl-vscode-ext",
  "displayName": "ODAVL Studio",
  "description": "Automated development governance with code healing and CI management",
  "version": "0.4.1",
  "publisher": "odavl",
  "engines": {
    "vscode": ">=1.85.0"
  },
  "main": "./dist/extension.js",
  "categories": [
    "Other",
    "Linters"
  ],
  "galleryBanner": {
    "color": "#1e3a8a",
    "theme": "dark"
  },
  "icon": "media/odavl.svg",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        { "id": "odavl", "title": "ODAVL", "icon": "media/odavl.svg" }
      ]
    },
    "views": {
      "odavl": [
        { "id": "odavl.control", "name": "Control", "icon": "media/odavl.svg" }
      ]
    },
    "commands": [
      { "command": "odavl.scan", "title": "ODAVL: Scan" },
      { "command": "odavl.heal", "title": "ODAVL: Heal" },
      { "command": "odavl.explain", "title": "ODAVL: Explain" },
      { "command": "odavl.undo", "title": "ODAVL: Undo" },
      { "command": "odavl.reports", "title": "ODAVL: Open Reports" }
    ],
    "activationEvents": [
      "onView:odavl.control",
      "onCommand:odavl.scan",
      "onCommand:odavl.heal",
      "onCommand:odavl.explain",
      "onCommand:odavl.undo",
      "onCommand:odavl.reports"
    ]
  },
  
  "scripts": {
  "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true })\"",
  "bundle": "node scripts/bundle-extension.mjs",
  "build": "pnpm run clean && pnpm run bundle"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.17",
    "tape": "^5.9.0",
    "nyc": "^15.1.0",
    "auto-changelog": "^2.5.0",
    "@types/tape": "^5.8.1",
    "@ljharb/eslint-config": "^21.1.1",
    "@ljharb/tsconfig": "^0.3.2",
    "core-js": "^3.40.0",
    "encoding": "^0.1.13",
    "npmignore": "^0.3.1",
    "safe-publish-latest": "^2.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
