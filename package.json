{
  "name": "odavl-studio",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "workspaces": [
    "apps/launcher",
    "apps/orchestrator",
    "apps/vscode-ext",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "sbom:generate": "pnpm list --json --recursive > reports/phase3/security/sbom.cdx.json",
    "scan:osv": "pnpm dlx osv-scanner -r . > reports/phase3/security/osv.log 2>&1",
    "scan:gitleaks": "pnpm dlx gitleaks detect --no-git -s . --redact --report-format=json --report-path=reports/phase3/security/gitleaks.log",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "pnpm -r exec vitest run --coverage --reporter=default --outputFile=coverage/test.log",
    "format": "turbo run format",
    "e2e": "node scripts/e2e-golden.mjs",
    "qa:wave4": "node scripts/wave4-qa.mjs",
    "go:report": "node scripts/go-report.mjs",
    "weekly": "node scripts/weekly-report.mjs",
    "launcher": "pnpm --filter @odavl/launcher run dev",
    "gates:validate": "node scripts/gates-validate.mjs",
    "verify:unify": "node scripts/verify-unify.mjs",
    "status": "node ./apps/cli/bin/odavl.js status --json > reports/metrics.json || echo \"{}\"",
    "verify": "node ./apps/cli/bin/odavl.js verify --report reports/verify.json || echo \"{}\"",
    "build:cli": "tsc -p apps/cli/tsconfig.json",
    "typecheck": "tsc -p . --noEmit",
    "studio:build": "pnpm --filter @odavl/vscode-ext build",
    "odavl:immune:p0": "node scripts/immune/p0-attest.mjs",
    "odavl:immune:status": "node scripts/immune/sensors.mjs",
    "odavl:immune:triage": "node scripts/immune/triage.mjs",
    "odavl:immune:triage:verify": "node scripts/immune/triage-verify.mjs",
    "odavl:immune:vaccinate:dry": "node scripts/immune/vaccines-dry.mjs",
    "odavl:immune:heal:eslint": "node scripts/immune/heal.mjs eslint",
    "odavl:immune:heal:plan": "node scripts/immune/heal.mjs plan",
    "odavl:immune:ab:suggest": "node scripts/immune/antibodies.mjs suggest",
    "odavl:immune:ab:apply": "node scripts/immune/antibodies-apply.mjs --id=eslint-no-unused-vars-001 --dry",
    "odavl:immune:verify": "node scripts/immune/verify.mjs",
    "odavl:immune:undo": "node scripts/immune/undo.mjs",
    "odavl:immune:escalate": "node scripts/immune/escalate.mjs",
    "odavl:immune:metrics": "node scripts/immune/metrics.mjs",
    "odavl:immune:heatmap": "node scripts/immune/heatmap.mjs",
    "odavl:immune:twin": "node scripts/immune/twin.mjs",
    "odavl:immune:finalcheck": "node scripts/immune/final-check.mjs",
    "odavl:immune:problems": "node scripts/immune/problems.mjs",
    "odavl:problems:scan": "node scripts/immune/problems/scan.mjs",
    "odavl:problems:plan": "node scripts/immune/problems/plan.mjs",
    "odavl:problems:apply": "node scripts/immune/problems/apply.mjs",
    "odavl:problems:escalate": "node scripts/immune/problems/escalate.mjs",
    "odavl:problems:run": "node scripts/immune/problems/run.mjs",
    "lint:pkgs": "pnpm -r exec eslint \"src/**/*.ts\" \"apps/*/src/**/*.ts\" \"packages/*/src/**/*.ts\" --ext .ts,.tsx",
    "build:pkgs": "pnpm -r exec tsc -b",
    "lint:loose": "pnpm -r exec eslint \"src/**/*.ts\" \"packages/**/*.ts\" || echo 'lint warnings only'",
    "build:loose": "pnpm -r exec tsc --noEmit --skipLibCheck || echo 'build ok (loose)",
    "orchestrate:audit": "node scripts/orchestrate-audit.mjs",
    "bundle:log": "pnpm exec npx --no-install size-limit > reports/evaluations/2025-10-01/bundle/bundle.log 2>&1 || echo 'Bundle size tool not configured' > reports/evaluations/2025-10-01/bundle/bundle.log",
    "doctor": "node scripts/doctor.js",
    "metrics:log": "node scripts/prometheus-metrics.js",
    "docs:gen": "node ./tools/gen-api-docs.mjs",
    "docs:check": "node ./tools/gen-api-docs.mjs --check"
  },
  "devDependencies": {
    "@cyclonedx/bom": "^4.1.2",
    "@cyclonedx/cyclonedx-library": "^9.0.0",
    "@cyclonedx/cyclonedx-npm": "^4.0.3",
    "@size-limit/preset-app": "^11.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "c8": "^10.1.3",
    "depcheck": "^1.4.7",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "gitleaks": "^1.0.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "knip": "^5.64.0",
    "lockfile-lint": "^4.14.1",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "prom-client": "^15.1.3",
    "prometheus-client": "^0.1.1",
    "semgrep": "^0.0.1",
    "size-limit": "^11.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "version": "0.5.0",
  "dependencies": {
    "@eslint/js": "^9.36.0",
    "js-yaml": "^4.1.0"
  },
  "size-limit": [
    {
      "name": "CLI",
      "path": "apps/cli/dist/apps/cli/src/index.js",
      "limit": "500 KB"
    },
    {
      "name": "VSCode Extension",
      "path": "apps/vscode-ext/dist/extension.js",
      "limit": "1 MB"
    }
  ]
}
