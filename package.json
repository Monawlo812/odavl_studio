{
  "name": "odavl-studio",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "e2e": "node scripts/e2e-golden.mjs",
    "qa:wave4": "node scripts/wave4-qa.mjs",
    "go:report": "node scripts/go-report.mjs",
    "weekly": "node scripts/weekly-report.mjs",
    "launcher": "pnpm --filter @odavl/launcher run dev",
    "gates:validate": "node scripts/gates-validate.mjs",
    "verify:unify": "node scripts/verify-unify.mjs",
    "status": "node ./apps/cli/bin/odavl.js status --json > reports/metrics.json || echo \"{}\"",
    "verify": "node ./apps/cli/bin/odavl.js verify --report reports/verify.json || echo \"{}\""
    ,"build:cli": "tsc -p apps/cli/tsconfig.json"
    ,"typecheck": "tsc -p . --noEmit"
    ,"studio:build": "pnpm --filter @odavl/vscode-ext build"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-library": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "c8": "^10.1.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.1.3",
    "knip": "^5.64.0",
    "lockfile-lint": "^4.14.1",
    "odavl-cli": "workspace:*",
    "prettier": "^3.6.2",
    "semgrep": "^0.0.1",
    "ts-jest": "^29.4.4",
    "tsup": "^8.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "version": "0.5.0"
}
